<!DOCTYPE!>
<html>
 <body>
  <section class="index-container">
   <div>
      <h2>List of Foods</h2>
      <div>
      <%= link_to 'Add Food', new_food_path %>
      </div>
      <br>
      <table>
        <thead>
          <tr>
            <th>Food</th>
            <th>Price</th>
            <th>Measurement Unit</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
            <tr>
               <td><%= food.name %></td>
               <td><%= food.price %></td>
               <td><%= food.measurement_unit %></td>
              <div>
               <td>
                <%= link_to'Delete', food, :method => :delete %>
               </td>
            </tr>
          </div>
          <% end %>
        </tbody>
      </table>
   </div>
  </section>
 </body>
</html>
