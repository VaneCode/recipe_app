<%= form_with model: recipe_food, class: 'divTableRow', id: dom_id(recipe_food, 'inline_form') do |form| %>
  <div class="divTableCell">
    <%= recipe_food.food.name %>
  </div>

  <div class="divTableCell">
    <%= form.text_field :quantity %>
  </div>

  <div class="divTableCell">
    $<%= recipe_food.food.price * recipe_food.quantity %>
  </div>

  <div class="divTableCell">
    <%= form.submit %>
  </div>
<% end %>